@model tdtt.Models.Login.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng Nhập - Đại Học Thể Dục Thể Thao</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #17a2b8;
            height: 100vh;
        }

        #login .container #login-row #login-column #login-box {
            margin-top: 0px;
            max-width: 600px;
            height: 350px;
            border: 1px solid #9C9C9C;
            background-color: #EAEAEA;
        }

            #login .container #login-row #login-column #login-box #login-form {
                padding: 20px;
            }

                #login .container #login-row #login-column #login-box #login-form #register-link {
                    margin-top: -85px;
                }

        .btn {
            margin-left: 40%;
        }
    </style>
</head>

<body>
    <div id="login">
        <h3 class="text-center text-white pt-5"><img src="~/Img/images.png" /></h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {

                            <h3 class="text-center text-info">Login</h3>
                            <div style="color:red"> @Html.ValidationSummary(false, "", "error")</div>

                            <div class="form-group">
                                <label for="username" class="text-info">Tài Khoản</label><br>
                                @Html.TextBoxFor(m=>m.Username, new { @class = "form-control", @required = "Nhập Tài Khoản", @placeholder = "Nhập Tài Khoản" })

                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Mật Khẩu</label><br>
                                @Html.PasswordFor(m=>m.Password,new { @class = "form-control", @required = "Nhập mật khẩu", @placeholder = "Nhập Mật Khẩu" })

                            </div>
                            <div class="form-group" style="display:inline-flex">
                                <label for="remember-me" class="text-info">
                                    @Html.CheckBoxFor(m=>m.Remember)Nhớ Mật Khẩu
                                </label>
                            </div>
                            <div class="form-group">
                                <button type="submit" name="submit" class="btn btn-info btn-md">Đăng Nhập</button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

