@{ 
    int access = -1;
    if (Session["type"] == null)
    {
        access = -1;
    }
    else
    {
        access = (int)Session["type"];
    }

}




<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <!-- Custom fonts for this template-->
    <link href="~/Content/Css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap5/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="~/Content/Css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        table, th, td, tr {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th {
            color: blue;
        }

        th, td {
            padding: 5px;
            text-align: center;
        }
    </style>

</head>

<body id="page-top">
    <div class="logo-header">
        <a class="logo-header" href="#"><img src="~/Img/images.png"></a>

        <h2 class="logo-header">
            ĐẠI HỌC ĐÀ NẴNG <br />
            TRƯỜNG ĐẠI HỌC THỂ DỤC THỂ THAO<br />
            PHÒNG NGHIÊN CỨU KHOA HỌC
        </h2>
    </div>

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        @if (2 == access)
        {
            @Html.Partial("_LectLeft");
        }
        else if (1 == access)
        {

        }
        else if (0 == access)
        { }
        else if (-1 == access)
        {
            @Html.Partial("_generalLeft");
        }
        else

        {

        }



        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Menu bar -->
                    <ul class="navbar-nav ml-auto">
                        <li class="menu"> <a href="@Url.Action("Index","Home")" style="color:black"><i class="fa fa - home" aria-hidden="true"></i>TRANG CHỦ</a></li>
                        <li class="menu"><a href="@Url.Action("Notification","Home")" style="color:black"><i class="fa fa - home" aria-hidden="true"></i>THÔNG BÁO</a></li>
                        <li class="menu"><a href="@Url.Action("Statement","Home")" style="color:black"><i class="fa fa - home" aria-hidden="true"></i>LỊCH BÁO CÁO</a></li>
                        <li class="menu"><a href="@Url.Action("DataTablePoint","Home")" style="color:black"><i class="fa fa - home" aria-hidden="true"></i>VĂN BẢN- BIỂU MẪU</a></li>
                        @if (Session["user"] == null)
                        {
                            <li class="menu"><a href="@Url.Action("Index","Login")" style="color:black;left:0"><i class="fa fa - home" aria-hidden="true"></i>Login</a></li>
                        }
                        else
                        {
                            <li class="menu"><a href="@Url.Action("Logout","Login")" style="color:black;left:0"><i class="fa fa - home" aria-hidden="true"></i>Logout</a></li>
                        }
                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    @RenderBody()

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/JS/jquery.min.js"></script>
    <script src="~/Content/JS/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/JS/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/JS/sb-admin-2.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>
