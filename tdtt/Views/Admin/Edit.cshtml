
@model DataContext.DataTable.Account

@{
    ViewBag.Title = "FormEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string user = ViewBag.User;
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh Sửa Tài Khoản Đăng Nhập Hệ Thống</h6>
    </div>

    <div class="table-responsive">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
            @using (Html.BeginForm("Update", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Tên Đăng Nhập</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @text = user, @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Quyền Truy Cập</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Access, null, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Access, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Trạng Thái Hoạt Động</label>                            <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Status, null, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-facebook" />


                        </div>

                    </div>


                </div>
            }
          

       
            @Html.ActionLink("Reset Pass","reset","Admin",new { id = Model.UserName },new{ @onclick="confirm('Reset Mật Khẩu')"})
        </div>
    </div>

</div>

<div>
    <a href="@Url.Action("Index","Admin")"><< Quay lại danh sách</a>
</div>