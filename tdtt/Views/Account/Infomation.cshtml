            <label class="control-label col-md-2">Khoa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdKhoa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdKhoa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập Nhật" class="btn btn-facebook" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở Về", "getInfobySession")
</div>

