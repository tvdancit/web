@model tdtt.Models.Account.ChangePasswordModel

@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string user = ViewBag.user;
}

<h2>FormChange</h2>

@using (Html.BeginForm("Change","Account",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ChangePasswordModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class = "control-label col-md-2">Nhập Mật Khẩu Mới</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.newpass1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newpass1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nhập Lại Mật Khẩu Mới</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.newpass2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newpass2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nhập Mật Khẩu Cũ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.oldpass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.oldpass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-facebook" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
