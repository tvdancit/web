@model DataContext.DataTable.PointTable
@{
    Layout = null;
}
<div class="modal-dialog" style="width:1000px;">
    <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Thêm Nhiệm Vụ</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body" style=" width:600px;height:400px;align-items:flex-start;">
            @using (Html.BeginForm("Create", "Manager", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2"> Mã Nhiệm Vụ</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IdTy, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IdTy, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2"> Lĩnh Vực</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.IdTy,new SelectList ( ViewBag.IdTy,"IdTy","Name"),"Chọn Lĩnh Vực", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IdTy, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Loại Nhiệm Vụ</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NameP, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NameP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Modal footer -->
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>

    </div>
</div>
